<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="style.css">
  <title>mca scheduler</title>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script>
    $( function() {
      $( "#sortable" ).sortable();
      $( "#sortable" ).disableSelection();
    } );
  </script>
</head>
<body>
  <center>
  <form action="list" method="post">
    Name: <input type="text" name="first" required>
    Middle Initial: <input type="text" name="middle" maxlength="1" size="1" style="text-align: center">
    Last Name: <input type="text" name="last" required>
  </form>
  </center>
  <center>
  <ul id="sortable">
    <li class="column">
      Item 1 <input type="hidden" name="classes[1]" value="class1">
    </li>
    <li class="column">
      Item 2 <input type="hidden" name="classes[2]" value="class2">
    </li>
    <li class="column">
      Item 3 <input type="hidden" name="classes[3]" value="class3">
    </li>
    <li class="column">
      Item 4 <input type="hidden" name="classes[4]" value="class4">
    </li>
    <li class="column">
      Item 5 <input type="hidden" name="classes[5]" value="class5">
    </li>
    <li class="column">
      Item 6 <input type="hidden" name="classes[6]" value="class6">
    </li>
    <li class="column">
      Item 7 <input type="hidden" name="classes[7]" value="class7">
    </li>
  </ul>
  </center>
  <input type="submit">
  </form>
</body>
</html>